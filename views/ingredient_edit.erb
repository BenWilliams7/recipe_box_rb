<h1>Update: <%= @ingredient.name %></h1>
<br>
<form action="/ingredient/<%= @ingredient.id() %>/update" method="post">
  <input name="_method" type="hidden" value="patch" "#{<%= @ingredient.id %>}">

  <input id="ingredient-name" name="ingredient-name" type="text" placeholder="Edit the ingredient:">

  <button class="btn btn-success" type="submit">Update</button>
</form>
<br>



<form action="/ingredient/project/connector" method="post">
  <label for="recipe_id">Select a Project</label>
  <input name="_method" type="hidden" value="patch" "#{<%= @ingredient.id %>}">
  <select id='recipe_id' name='recipe_id' type='text'>
    <% @recipes.each() do |recipe| %>
      <option value="<%= recipe.id()%>"> <%= recipe.name() %> </option>
    <% end %>
  </select>
  <br>
  <!-- <label for="nombre">Name of the ingredient:</label> -->
  <!-- <input id="name" name="name" type="text"> -->

  <button type="submit">Add ingredient</button>
</form>
