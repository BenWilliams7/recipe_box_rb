<h1><%= @recipe.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>View instructions</h3>
      <ul>
        <% Instruction.all.each do |ingredient| %>
          <h5><a href="/instruction/<%= instruction.id %>"><%= instruction.name %></a></h5>
        <% end %>
      </ul>
      <br>
      <h3>View ingredients</h3>
      <ul>
        <% Ingredient.all.each do |ingredient| %>
          <h5><a href="/ingredient/<%= ingredient.id %>"><%= ingredient.name %></a></h5>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <!-- for to add ingredients -->
      <form class="form-group" action="/ingredients" method="post">
        <input name="recipe_id" type="hidden" value="<%= @recipe.id %>">
        <label for="ingredient-name">Enter Ingredient</label>
        <input class="form-control" type="text" name="ingredient-name">
        <br>
        <button type="submit" class="btn btn-success">Add Ingredient</button>
      </form>
      <!-- form to add instructions -->
      <form class="form-group" action="/instructions" method="post">
        <input name="recipe_id2" type="hidden" value="<%= @recipe.id %>">
        <label for="instruction-desc">Enter Instruction</label>
        <input class="form-control" type="text" name="instruction-desc">
        <br>
        <button type="submit" class="btn btn-success">Add Instruction</button>
      </form>
    </div>
  </div>
</div>
