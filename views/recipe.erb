<div class="row">
  <div class="col-md-6">
    <h3>View your recipes</h3>
    <h4><%= @recipe_message %></h4>
    <ul>
      <% Recipe.all.each do |recipe| %>
        <h5><a href="/recipe/<%= recipe.id %>"><%= recipe.name %></a></h5>
      <% end %>
    </ul>
  </div>
  <!-- form -->
  <div class="col-md-6">
    <h3>Add a New Recipe</h3>
    <br>
    <div>
      <form class="form-group" action="/recipes" method="post">
        <label for="recipe-name">Recipe Name</label>
        <input class="form-control" type="text" name="recipe-name">
        <br>

        <button type="submit" class="btn btn-success">Add Recipe</button>
      </form>
    </div>
  </div>
</div>
